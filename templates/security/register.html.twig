{% extends 'base.html.twig' %}

{% block title %}S'inscrire{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('app_style') }}
{% endblock stylesheets %}

{% block body %}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6 mt-5">
            {% for flash_error in app.flashes('verify_email_error') %}
                <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
            {% endfor %}

            <div class="card">
                <div class="card-body">
                    <h1 class="text-center mb-4">S'inscrire</h1>

                    {{ form_start(registrationForm, {'attr': {'class': 'form-horizontal'}}) }}
                    
                    {{ form_row(registrationForm.email, {'attr': {'class': 'form-control mb-3'}}) }}
                    {{ form_row(registrationForm.plainPassword, {
                        'label': 'Password',
                        'attr': {'class': 'form-control mb-3'}
                    }) }}
                    {{ form_row(registrationForm.lastname, {'attr': {'class': 'form-control mb-3'}}) }}
                    {{ form_row(registrationForm.firstname, {'attr': {'class': 'form-control mb-3'}}) }}
                    {{ form_row(registrationForm.phone, {'attr': {'class': 'form-control mb-3'}}) }}

                    <div class="form-check mb-3">
                        {{ form_widget(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
                        {{ form_label(registrationForm.agreeTerms, null, {'attr': {'class': 'form-check-label'}}) }}
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-lg">S'inscrire</button>
                    </div>
                    
                    {{ form_end(registrationForm) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
