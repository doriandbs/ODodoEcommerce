{% extends 'base-admin.html.twig' %}

{% block title %}Produit{% endblock %}

{% block body %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Nom</th>
                <td>{{ product.name }}</td>
            </tr>
            <tr>
                <th>Prix HT</th>
                <td>{{ product.priceHT }}</td>
            </tr>
            <tr>
                <th>Image</th>
               <td> <img src="/cms/images/{{ product.image.path }}" style="width:10%" alt="{{ product.name }}"></td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_product_admin_index') }}">Retour</a>

    <a href="{{ path('app_product_admin_edit', {'id': product.id}) }}">Modifier</a>

    {{ include('admin/admin_product/_delete_form.html.twig') }}
{% endblock %}
